def f_named(x):
    return x**2 + 3


f_lambda = lambda x: x**2 + 3


x_value = 5


print("named:", f_named(x_value))


print("lambda:", f_lambda(x_value))

2)
def user_division():
    try:
        # Get user input for two integers
        x = int(input("Enter the first number (x): "))
        y = int(input("Enter the second number (y): "))
        
        # Check if y is divisible by x
        if y % x == 0:
            print(f"{y} / {x} = {y / x}")
        
        # Check if x is divisible by y
        elif x % y == 0:
            print(f"{x} / {y} = {x / y}")
        
        # Print error if neither divides the other evenly
        else:
            print("Error")
    
    except ZeroDivisionError:
        print("Division by zero is not allowed.")
    except ValueError:
        print("Please enter valid integers.")

# Call the function
user_division()
3)
def func(s):
    # Remove leading '-' or '+' and any decimal point, if present
    if s[0] in ['-', '+']:
        s = s[1:]  # Remove the sign if it's there
    
    # Check if it's a decimal number
    if '.' in s:
        s = s.replace('.', '', 1)  # Remove one decimal point
    
    # Check if the remaining string consists only of digits
    return s.isdigit()

# Test cases based on your examples
print(func('26587'))    # True
print(func('4.2365'))   # True
print(func('-12547'))   # True
print(func('00'))       # True
print(func('A001'))     # False
print(func('001'))      # True
