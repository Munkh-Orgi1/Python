# 1: Өөр өөр тооны гишүүдтэй 3 баг үүсгэнэ
team1 = ['Bat', 'Bold', 'Saraa', 'Ganaa', 'Dulam']
team2 = ['Onon']
team3 = ['Solongo', 'Bulganaa']

# Бүх багийг нэг жагсаалтад нэгтгэнэ
teams = [team1, team2, team3]
print("Баг бүрийн мэдээллийг нэг жагсаалтад оруулсны дараа")
print(teams)

# 2: Багийн хамгийн дээд хэмжээг олно
max_team_size = max(len(team) for team in teams)

# 3: Цөөн гишүүнтэй багуудад шинэ гишүүд нэмнэ
team2.extend(['Saran', 'Saikhnaa', 'Zaya', 'Purev'])  # Fill team 2
team3.extend(['Sarnai', 'Erdene', 'Khishgee'])         # Fill team 3

# 4: Багуудыг дахин нэгтгэж, шинэчилсэн жагсаалтыг хэвлэх
updated_teams = [team1, team2, team3]
print("\nБүх багууд ижил тооны гишүүдтэй болмогц")
print(updated_teams)

# 5: Баг бүрийг гишүүдийн нэрээр эрэмбэл
for team in updated_teams:
    team.sort()

# 6: Багийн гишүүдийг эрэмбэлсэн хэвлэх
print("\nБаг бүрийг гишүүний нэрээр эрэмбэлсэн хэвлэ")
for team in updated_teams:
    for member in team:
        print(member)
    print()  # Баг бүрийн араас шинэ мөр
9)
anket1 = {'Bat': '18', 'Ankhaa': '26'}
anket2 = {'Dorj': '16', 'Bold': '35'}

# Судалгаа1 болон судалгаа2-г нэгтгэнэ
merged_dict = {**anket1, **anket2}

# Толь бичгийг товчлуураар нь ангил
sorted_dict = dict(sorted(merged_dict.items()))

# Түлхүүр-утга хос бүрийг хэвлэ
for key, value in sorted_dict.items():
    print(f"{key}: {value}")

# Step 1: Create teams with different numbers of members
team1 = ['Alice', 'Bob']
team2 = ['Charlie', 'David', 'Eva']
team3 = ['Frank']
team4 = ['Grace', 'Hannah', 'Ivy', 'Jack']
team5 = ['Kim', 'Leo']

# Step 2: Create a single list of all teams
all_teams = [team1, team2, team3, team4, team5]

# Step 3: Print the current list of all teams
print("Initial teams:")
for i, team in enumerate(all_teams, 1):
    print(f"Team {i}: {team}")

# Step 4: Find the maximum number of members in a team
max_members = max(len(team) for team in all_teams)

# Step 5: Add new members to the teams with the maximum number of members
for team in all_teams:
    if len(team) == max_members:
        team.append('NewMember1')
        team.append('NewMember2')

# Step 6: Sort the members of each team and print the updated list
print("\nUpdated teams (after adding new members and sorting):")
for i, team in enumerate(all_teams, 1):
    team.sort()  # Sort members of each team
    print(f"Team {i}: {team}")

team1 = ['Bat', 'Bold', 'Dulam']  
team2 = ['Ganaa']                   
team3 = ['Erka', 'Nomin', 'Ganhulug', 'Hishge']  
team4 = ['Jason', 'Sarnai']             
team5 = ['Lhagwa', 'Molor', 'Ninjka', 'Otgoo', 'Puuje']  

teams = [team1, team2, team3, team4, team5]
print("Teams members:", teams)

max_members = max(len(team) for team in teams)
print("Maximum number of members in a team:", max_members)

for i in range(len(teams)):
    while len(teams[i]) < max_members:
        new_member = input(f"Enter a new member for team {i + 1} (current members: {teams[i]}): ")
        teams[i].append(new_member)

print("Teams members:", teams)

print("\nAll teams:")
for team in teams:
    team.sort() 
    for member in team:
        print(member)  
    print()  
